{
    "version": "0.2.0",
    "configurations": [
    
        {
            "name": "Debug a.exe",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/a.exe",
            "args": ["AOC_${input:dayNumber}/AOC_${input:dayNumber}.txt"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/msys64/ucrt64/bin/gdb.exe",
            "preLaunchTask": "build day"
        }
    ],
    "inputs": [
        {
            "id": "dayNumber",
            "type": "promptString",
            "description": "Enter the day number for debugging"
        }
    ]
}
